<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:controls="clr-namespace:SmashMall.App.Controls"
             x:Class="SmashMall.App.Pages.Goods.Goods">
    <ContentView.Content>
        <StackLayout>
            <Label x:Name="SearchCountTextBlock" Text="Search results"/>
            <StackLayout>
                <controls:GoodsView x:Name="GoodsView"/>
            </StackLayout>

            <StackLayout>
                <StackLayout Style="{StaticResource ItemsHeader}">
                    <Label Text="Items you may like"/>
                </StackLayout>
                <controls:GoodsView x:Name="ItemsYouMayLikeView"/>
            </StackLayout>

        </StackLayout>
    </ContentView.Content>
</ContentView>