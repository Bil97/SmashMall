<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Layout" x:Key="CustomBackground">
        <Setter Property="Background" Value="#e9ecef"/>
    </Style>

    <Style TargetType="Layout" x:Key="ItemsHeader" >
        <Setter Property="Background" Value="Orange"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style TargetType="Grid" x:Key="OrangeGrid" >
        <Setter Property="Background" Value="Orange"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style TargetType="Button" x:Key="OrangeButton" >
        <Setter Property="Background" Value="Orange"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style TargetType="Button" x:Key="LinkButton" >
        <Setter Property="Foreground" Value="White"/>
    </Style>


</ResourceDictionary>
