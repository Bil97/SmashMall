<Application
    x:Class="SmashMall.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmashMall.UWP" 
    xmlns:converter="using:SmashMall.UWP.Services.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
              <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
              <ResourceDictionary Source="Resources/MyResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:CurrencyConverter x:Key="CurrencyConverter"/>
            <converter:ImageUrlConverter x:Key="ImageUrlConverter"/>
            <converter:SellerConverter x:Key="SellerConverter"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
